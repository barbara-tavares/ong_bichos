<h1>Lista de tutores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.nome %></td>
        <td><%= owner.contato %></td>
        <td><%= link_to 'Detalhes', owner %></td>
        <td><%= link_to 'Editar', edit_owner_path(owner) %></td>
        <td><%= link_to 'Excluir', owner, method: :delete, data: { confirm: 'Certeza que quer excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Animais cadastrados</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Nome</th>
      <th>Especie</th>
      <th>Precisa de</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= image_tag animal.foto.url(:medium) %></td>
        <td><%= animal.nome %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.tipo_acao %></td>
        <td><%= link_to 'Detalhes', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Excluir', animal, method: :delete, data: { confirm: 'Certeza que quer excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo animal', new_animal_path %>
